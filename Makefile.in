# $Id: Makefile.in,v 1.1 1999-10-23 19:28:45 danw Exp $

SHELL=/bin/sh
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_HEADER=${INSTALL_DATA}
LIBTOOL=@LIBTOOL@
MKDIR_P=@MKDIR_P@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
top_builddir=@top_builddir@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@
mandir=@mandir@
pkgconfigdir=${libdir}/pkgconfig

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@ ${WARN_CFLAGS} ${ERROR_CFLAGS}
DEFS=@DEFS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}
OBJS=athdir.lo stringlist.lo

all: libathdir.la

libathdir.la: ${OBJS}
	${LIBTOOL} --mode=link ${CC} ${ALL_LDFFLAGS} -o $@ ${OBJS} -rpath ${libdir} -version-info 0:0:0

.SUFFIXES: .lo

.c.lo:
	${LIBTOOL} --mode=compile ${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${MKDIR_P} ${DESTDIR}${libdir}
	${MKDIR_P} ${DESTDIR}${includedir}
	${MKDIR_P} ${DESTDIR}${pkgconfigdir}
	${LIBTOOL} --mode=install ${INSTALL} libathdir.la ${DESTDIR}${libdir}
	${INSTALL_HEADER} ${srcdir}/athdir.h ${DESTDIR}${includedir}
	${INSTALL_DATA} ${srcdir}/athdir.pc ${DESTDIR}${pkgconfigdir}/athdir.pc

clean:
	${LIBTOOL} --mode=clean rm -f ${OBJS} libathdir.la

distclean: clean
	rm -f config.cache config.log config.status Makefile athdir.pc
